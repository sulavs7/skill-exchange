<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecommerce Website</title>
    <link rel="stylesheet" href="stylesheets/homepage.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo">
            <h1>E-Shop</h1>
        </div>
        <div class="nav-links">
            <a href="#">Experience</a>
            <a href="#">Skills</a>
            <a href="#">Explore</a>
            <a href="#">Shop</a>
        </div>
        <!-- <div class="auth-buttons">
            <button onclick="redirectToLogin()" class="login">Login</button>

            
                <button  class="signup" onclick="redirectToSignUp()">Sign Up</button>
            
        </div> -->
        <div class="auth-buttons">
            <a href="/login" class="login">Login</a>
            <a href="/signup" class="signup">Sign Up</a>
        </div>
    </nav>

    <!-- Image Slider -->
    <div class="slider">
        <div class="slide active">
            <img src="https://via.placeholder.com/1200x400/ff7f7f/ffffff" alt="Slide 1">
        </div>
    </div>

    <!-- Products Section -->
    <section class="products">
        <h2>Featured Products</h2>
        <div class="product-list">
            <div class="product-card">
                <img src="https://via.placeholder.com/200" alt="Product 1">
                <h3>Product 1</h3>
                <p>Description of product 1</p>
                <div class="price">$99.99</div>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/200" alt="Product 2">
                <h3>Product 2</h3>
                <p>Description of product 2</p>
                <div class="price">$149.99</div>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/200" alt="Product 3">
                <h3>Product 3</h3>
                <p>Description of product 3</p>
                <div class="price">$199.99</div>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/200" alt="Product 4">
                <h3>Product 4</h3>
                <p>Description of product 4</p>
                <div class="price">$79.99</div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>About Us</h3>
                <ul>
                    <li>Our Story</li>
                    <li>Blog</li>
                    <li>Careers</li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Customer Service</h3>
                <ul>
                    <li>Contact Us</li>
                    <li>Shipping Info</li>
                    <li>Returns</li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Privacy & Terms</h3>
                <ul>
                    <li>Privacy Policy</li>
                    <li>Terms of Service</li>
                    <li>Cookie Policy</li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Connect With Us</h3>
                <ul>
                    <li>Facebook</li>
                    <li>Twitter</li>
                    <li>Instagram</li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 E-Shop. All rights reserved.</p>
        </div>
    </footer>

    <script src="javascript/homepage.js">
       
    </script>
</body>
</html>
